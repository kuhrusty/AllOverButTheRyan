<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!--  Things you can control:
          - timer length (5s, 10s, 15s, etc.)
          - time up text
          - sound (random, or one of ...)
    -->

    <ListPreference
        android:key="timer_duration"
        android:title="@string/pref_title_timer_duration"
        android:entries="@array/pref_timer_duration_titles"
        android:entryValues="@array/pref_timer_duration_values"
        android:defaultValue="30"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="sound"
        android:title="@string/pref_title_sound"
        android:entries="@array/pref_sound_titles"
        android:entryValues="@array/pref_sound_values"
        android:defaultValue="ryan"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <SwitchPreference
        android:key="sand"
        android:title="@string/pref_title_sand"
        android:summary="@string/pref_summary_sand"
        android:defaultValue="false" />

